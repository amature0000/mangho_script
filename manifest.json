{
  "manifest_version": 3,
  "name": "MANGHO detector",
  "version": "0.0.0",
  "description": "헬다이버즈 시리즈 갤러리 망호 실시간 감지 및 자동 참여 확장 프로그램",
  
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "https://gall.dcinside.com/*",
    "https://steamcommunity.com/*"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "MANGHO detector 설정"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.dcinside.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "https://gall.dcinside.com/*"
      ]
    }
  ]
}